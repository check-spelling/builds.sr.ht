#!/usr/bin/env bash
set -ex

self=$(readlink -f $0)
self=$(dirname "$self")

base=$1
cmd=$2
shift 2

case "$base" in
    archlinux)
        ;;
    *)
        echo "Unknown base image $base"
        exit 1
        ;;
esac
. $self/$base/functions

ssh_opts="-o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no"

function guest_ssh() {
    ssh $ssh_opts "$@"
}

function check_root() {
    if [ $EUID != 0 ]
    then
        echo "This command requires root."
        exit 1
    fi
}

case "$cmd" in
    prepare)
        check_root
        prepare "$@"
        ;;
    boot)
        check_root
        boot "$@"
        ;;
    cleanup)
        check_root
        cleanup "$@"
        ;;
    sanity-check)
        check_root
        sanity_check "$@"
        ;;
    install)
        install "$@"
        ;;
    *)
        echo "Unknown command $cmd"
        ;;
esac
